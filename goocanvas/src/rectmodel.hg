#include <glibmm/object.h>
#include <goocanvasmm/itemmodelsimple.h>

_DEFS(goocanvasmm,libgoocanvas)
_PINCLUDE(glibmm/private/object_p.h)

namespace Goocanvas
{

class RectModel :
